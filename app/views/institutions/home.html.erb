
<% content_for :title, "GI Bill Comparison Tool - Vets.gov" %>
<div id="content" class="interior">
  <a href="#content" class="sr-only">Content starts here.</a>
  <div class="splash">
    <div class="row">
      <div class="small-12 columns">
        <ul class="breadcrumbs" role="menubar" aria-label="Primary">
          <li class="parent"><a href="https://www.vets.gov/education/">Education Benefits</a></li>
            <li class="parent"><a href="https://www.vets.gov/education/gi-bill/">GI Bill</a></li>
            <li class="active">GI Bill<sup class="trademark">&reg;</sup> Comparison Tool
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="section one">
    <div class="row">
      <%= form_tag(search_page_path, id: "input-section", style: "", method: :get) do %>
        <input name="source" value="home" type="hidden" />
        </div>
        <div class="row">
        <!-- Home Page Teaser -->
          <div class="small-12 medium-8 columns teaser-container">
            <h4 class="home-teaser">Learn about education programs and compare estimated benefits by school.</h4>
          </div>
        </div>
        <div class="row">
          <div class="small-12 medium-8 columns">
            <div class="usa-card nested">
              <div id="about-you" class="usa-card-header nested">
                Step 1: Tell Us About Yourself
              </div>
              <div class="usa-card-content nested">
                <!-- About Yourself Section -->
                <div class="medium-5 columns">
                  <%= render partial: 'yourself', locals: { use_label: true } %>
              </div>
              <div class="medium-6 medium-offset-1 columns">
                <p>Whether you want to apply your GI Bill benefits to college classes or an on-the-job training program, this tool will help you make the most of them.</p>
              
                <div class="medium-4 columns box">
                  <div class="icon">
                    <i class="fa fa-graduation-cap fa-teaser"></i>
                  </div>
                  <span class="teaser-figure"><b>$</b></span>
                  <span class="teaser-head">Tuition &amp; Fees</span>
                </div>
              <div class="medium-4 columns box">      
                <div class="icon">
                  <i class="fa fa-home fa-teaser"></i>
                </div>
            
                <span class="teaser-figure"><b>$</b></span>
                <span class="teaser-head">Housing</span>
              </div>
              <div class="medium-4 columns box">
                <div class="icon">
                  <i class="fa fa-book fa-teaser"></i>
                </div>
                <span class="teaser-figure"><b>$</b></span>
                <span class="teaser-head">Books</span>
              </div>
            </div>
          </div>
        </div>

        <div class="usa-card">
          <div id="about-your-school" class="usa-card-header">
            Step 2: About Your School
          </div>
          <div class="usa-card-content">
            <!-- About Your School Section -->
            <a name="about_your_school"></a>
            <%= render partial: 'your_school', locals: { use_label: true, advanced: true, form_id: '#input-section' } %>
          </div>
        </div>
      <% end %>
    </div>
      
    <div class="small-12 medium-4 column">
      <%= render partial: 'profile_additional_resources' %>
    </div>      

    </div>
  </div>
</div>
  <div class="section one">
    <div class="row">
      <%= form_tag(search_page_path, id: "input-section", style: "", method: :get) do %>
      <input name="source" value="home" type="hidden" />
      
        
  </div>
